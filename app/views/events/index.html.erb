<% if current_user %>
  <%= link_to 'Create New Event', new_event_path, :class => "btn btn-default" %>
<br/><br/>
<% end %>

<div id="calendar"></div>
<br/>

<% @events.each do |event| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4><%= event.title %></h4>
    </div>
    <div class="panel-body">
    <p><%= event.description %></p>
    <p id="time"><small><%= time_ago_in_words(event.created_at) %> ago</small></p>
    <% if current_user %>
      <%= link_to 'Destroy', {:controller=>:events,:action=>:destroy, :id=>event}, :method=>:delete %>
    <% end %>
    </div>
  </div>
<% end %>